<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilestore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FireBaseProduct">
        <activity android:name="com.example.mobilestore.ShowProduct"></activity>
        <activity android:name="com.example.mobilestore.MainActivity" />
        <activity android:name="com.example.mobilestore.Welcome" />
        <activity android:name="com.example.mobilestore.RegisterActivity" />
        <activity android:name="com.example.mobilestore.LogInActivity" />
        <activity android:name="com.example.mobilestore.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>